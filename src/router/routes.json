{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Homepage redirects to courses",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "OAuth callback is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/prompt-password/:appId/:emailAddress/:provider": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Password prompt is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/reset-password/:appId/:fields": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Password reset is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/courses": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view courses",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/courses/:courseId": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view course details",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/courses/:courseId/lessons/:lessonId": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view lessons",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/my-learning": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view their learning",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/profile": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view profile",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/certificates/:courseId": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view certificates",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  }
}